<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/wave_divider"
        android:paddingLeft="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_wave_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Wave Height: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#0981D1"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="0dp"
                android:paddingLeft="16dp"/>

            <TextView
                android:id="@+id/tv_wave_height_value"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:gravity="bottom"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_wave_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wave Direction: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#0981D1"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                tools:layout_editor_absoluteX="191dp"
                tools:layout_editor_absoluteY="47dp" />

            <TextView
                android:id="@+id/tv_wave_direction_value"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_wave_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wave Period: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#0981D1"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="4dp"
                tools:layout_editor_absoluteX="207dp"
                tools:layout_editor_absoluteY="0dp"
                android:paddingLeft="16dp"/>

            <TextView
                android:id="@+id/tv_wave_period_value"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#0981D1"
                android:layout_marginTop="4dp"
                tools:layout_editor_absoluteX="150dp"
                tools:layout_editor_absoluteY="47dp"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/tv_time_value"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>