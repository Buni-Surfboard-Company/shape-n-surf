<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/white"
    card_view:cardCornerRadius="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_wave_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Wave Height: "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#4da0ff"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="0dp"
                android:paddingLeft="16dp"/>

            <TextView
                android:id="@+id/tv_wave_height_value"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:gravity="bottom"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#68ccf7"/>

            <TextView
                android:id="@+id/tv_wave_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wave Direction: "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#4da0ff"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                tools:layout_editor_absoluteX="191dp"
                tools:layout_editor_absoluteY="47dp" />

            <TextView
                android:id="@+id/tv_wave_direction_value"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#68ccf7"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_wave_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:paddingLeft="16dp"
                android:text="Wave Period: "
                android:textColor="#4da0ff"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="207dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/tv_wave_period_value"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:textColor="#68ccf7"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:text="Time: "
                android:textColor="#4da0ff"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="150dp"
                tools:layout_editor_absoluteY="47dp" />

            <TextView
                android:id="@+id/tv_time_value"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:textColor="#68ccf7"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
